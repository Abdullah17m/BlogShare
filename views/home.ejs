<%- include('partials/header'); -%>

<div>


<h1>Home</h1>
 
<p><%= homeContent %></p>

<% posts.forEach(function(post){ %>
    <h1><%= post.title %> </h1>
    <p><%=  post.name.substring(0,100)+"..." %><a href="/posts/<%=  post._id %>">  Read more</a></p>
    <form method="POST" action="/delete">
       <button class="btn btn-danger" type="submit" name="button" value="<%=  post._id %>">Delete</button>
    </form>
   
  <% }) %>
  
</div>
<%- include('partials/footer'); -%>